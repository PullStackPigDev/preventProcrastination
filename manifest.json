{
    "manifest_version": 3,
    "name": "Self Control 5000",
    "version": "0.1.0",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["script.js", "env.js"],
            "css": ["style.css", "black-and-white.css"],
            "run_at": "document_start"
        }
    ],
    "action":   {
        "default_title": "Self Control 5000",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "contextMenus",
        "webNavigation",
        "cookies",
        "background",
        "notifications",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "minimum_chrome_version": "23"
}